{% extends 'base.html.twig' %}

{% block title %}RockNtro!

{% endblock %}

{% block body %}

	{# morceauBDD : variable TWIG contenant tout les morceaux selectionnés en BDD et transmit par le controlleur 'BlogController' via la méthode render(), cela nous permet de traiter les données de la BDD avec le langage TWIG afin d'avoir un affichage sur le navigateur #}

	{# {{ dump(morceauBDD) }} #}

		<div class="row mb-2" > 

		{# arguments : #}
		{# 1. onemorceau : variable de reception que nous définissons dans la boucle, qui receptionne les données d'1 morceau par tour de boucle FOR #}
		{# 2. morceauBDD : variable Twig contenant l'ensemble des données selectionné en BDD #}

			{% for oneMorceau in morceauBDD %}{# boucle FOR Twig : #}

			{#	{{ dump(onemorceau) }} #}


				<div class="col-md-12 d-flex  d-flex justify-content-center mb-3">
				 <div class="row  g-0 border rounded overflow-hidden flex-md-row shadow-lg ">


					<div class="col-md-9 p-4 d-flex position-static justify-content-lg-between ">

						<strong class="d-inline-block mb-2 text-primary"> Titre: {{ oneMorceau.titre }} </strong>


						{# on piioche dans un objet twig #}
						<h3 class="mb-0">{{ oneMorceau.artiste }}</h3>
						{# date() : filtre TWIG qui permet de formater une date / heure #}

						<div class="mb-1 text-muted">Posté le
							{{ oneMorceau.date|date('d/m/Y') }}
							à
							{{ oneMorceau.date|date('H:i:s') }}</div>

						{% if app.user %}

							<form method="post">
							<input type="hidden" name="idMorceau" id="idMorceau" value="{{ oneMorceau.id }}">
							<button type="submit" class="btn btn-danger col-md-5" name="button" value="like">
								<i class="bi bi-hand-thumbs-up"></i>


							<button type="button" class="btn-sm btn-danger d-flex text-center" name="button" >
								<i class="bi bi-hand-thumbs-up me-1 " ></i>  <h5>25</h5> 
                              
							</button>

						</form>

						{% else %}

							<button class="btn btn-primary" name="button" value="like">
								Identifiez-vous pour liker

							</button>

						{% endif %}
							
						
						
						<a href="#" class="">Lire la suite</a>


					</div>
					<div class="col-md-12 ">
						<iframe src="{{ oneMorceau.lienspotify }}" width="80%" height="70em" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>

					</div>

					<div class="m-2 align-content-end text-muted">Posté le
							{{ oneMorceau.date|date('d/m/Y') }}
							à
							{{ oneMorceau.date|date('H:i:s') }}</div>

				</div>
			</div>
		{% endfor %}
	  </div>

{% endblock %}
